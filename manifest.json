{
  "manifest_version": 2,

  "name": "Chess Bot",
  "description": "This extension implements a bot using Stockfish",
  "version": "1.0",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.chess.com/*"], 
      "js": ["bot.js"]
    }
  ],
  "permissions": [
   "http://*.chess.com/*",
   "activeTab"
   ],
   "web_accessible_resources": ["inject.js", "stockfish.js"]
}